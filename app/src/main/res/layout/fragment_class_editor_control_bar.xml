<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragClassEditorControlBar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/class_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/lblClassName"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/description"
            android:id="@+id/btnEditClassDescription"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/base_points"
            android:id="@+id/btnEditClassStartingPoints"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/point_levels"
            android:id="@+id/btnEditLevelUpPoints"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/class_traits"
            android:id="@+id/btnEditClassTraits"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/known_skills"
            android:id="@+id/btnEditClassKnownSkills"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/minimum_attributes"
            android:id="@+id/btnEditClassAttributeRequirements"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/level_names"
            android:id="@+id/btnEditClassLevelNames"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

    </LinearLayout>

</FrameLayout>
