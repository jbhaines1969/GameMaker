<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.johnhaines.boardmonkey.gamemaker.FragAttCreationBasePlusDice">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/base_points"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:gravity="center" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtBasePointsBasePlusDice"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:selectAllOnFocus="true"
                    android:gravity="center"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/how_many_sides_per_dice"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:gravity="center" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtDiceSidesBasePlusDice"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:selectAllOnFocus="true"
                    android:gravity="center"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/how_many_rolls"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:gravity="center" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtDiceRollsBasePlusDice"
                    android:background="#ffffff"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:selectAllOnFocus="true"
                    android:gravity="center"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
                android:id="@+id/btnSaveBasePlusDice"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/SaveButton"
                android:textColor="#000000"
                android:textSize="24sp" />

    </LinearLayout>
</FrameLayout>
