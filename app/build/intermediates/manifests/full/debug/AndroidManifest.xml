            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.boardmonkey.johnhaines.gamemaker.ActNewGame" />
        <activity android:name="com.boardmonkey.johnhaines.gamemaker.ActGameEdit" />
        <activity android:name="com.boardmonkey.johnhaines.gamemaker.ActGameDescription" />
        <activity android:name="com.boardmonkey.johnhaines.gamemaker.ActListEditorFragHolder" />
