<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context="com.johnhaines.boardmonkey.gamemaker.FragListEdit">

    <TextView
        android:id="@+id/lblGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblTextGroup"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtAddItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="#ffffff"
            android:imeActionId="666"
            android:imeActionLabel="Add"
            android:textSize="24sp"
            android:inputType="textCapWords"
            android:selectAllOnFocus="true" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btnAddItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:textSize="24sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" />



    <ListView
        android:id="@+id/lstItemList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:clickable="true" />

</LinearLayout>

