<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.boardmonkey.johnhaines.gamemaker.ActGameDescription"
    android:background="@drawable/bg_bordertest_4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/lblGameName"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Enter Game Description"
            android:id="@+id/txtGameDescription"
            android:layout_gravity="center_vertical|top"
            android:layout_weight=".8"
            android:textSize="20dp"
            android:background="#ffffff"
            android:capitalize="sentences"
            android:editable="true"
            android:gravity="left|top"
            android:inputType="textMultiLine|textCapSentences"
            android:scrollIndicators="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Save and Continue"
            android:id="@+id/btnSaveGameDescription"
            android:layout_weight=".1" />
    </LinearLayout>
</RelativeLayout>
