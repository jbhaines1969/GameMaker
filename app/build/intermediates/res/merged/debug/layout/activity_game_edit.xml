<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GameEditMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fan_activity_background_1000_1667"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp"
    tools:context="com.johnhaines.boardmonkey.gamemaker.ActGameEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblGameNameEditMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/game"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="36sp"
                android:textStyle="normal|bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3" />

            <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
                android:id="@+id/btnEditName"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:onClick="editNameClicked"
                android:text="@string/edit_name"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2" />

            <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
                android:id="@+id/btnEditChar"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:onClick="editCharacteristicsClicked"
                android:text="@string/edit_characteristics"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2" />

            <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
                android:id="@+id/btnAttributeCreation"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:onClick="attributeCreationClicked"
                android:text="@string/attribute_creation"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2" />

            <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
                android:id="@+id/btnHealthCreation"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:onClick="healthCreationClicked"
                android:text="@string/health_type_creation"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2" />

            <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
                android:id="@+id/btnAdvancementMethod"
                android:layout_gravity="center_horizontal"
                android:layout_width="500dp"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:onClick="advancementButtonClicked"
                android:text="@string/advancement_method"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <com.johnhaines.boardmonkey.gamemaker.ButtonNoClick
            android:id="@+id/btnGameEditInfo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical|end"
            android:textSize="28sp"
            android:onClick="gameEditInfoButtonClicked" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frmGameEditInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
